javascript:(function(){var id='gui-scroller-v2';if(document.getElementById(id))return;var s=false,d=1,sp=2,raf,target=window;function findTarget(){var max=0,t=window;if(document.documentElement.scrollHeight>window.innerHeight)return window;var els=document.querySelectorAll('*');for(var i=0;i<els.length;i++){var e=els[i];var st=window.getComputedStyle(e);if((st.overflowY==='auto'||st.overflowY==='scroll')&&e.scrollHeight>e.clientHeight){var area=e.clientWidth*e.clientHeight;if(area>max&&e.clientHeight>200){max=area;t=e;}}}return t;}function loop(){if(!s)return;if(!target||target===window&&document.documentElement.scrollHeight<=window.innerHeight){target=findTarget();}target.scrollBy(0,d*sp);raf=requestAnimationFrame(loop);}function start(dir){d=dir;target=findTarget();if(!s){s=true;loop();}}function stop(){s=false;cancelAnimationFrame(raf);}var ui=document.createElement('div');ui.id=id;ui.style.cssText='position:fixed;top:60px;right:20px;z-index:9999999;background:rgba(0,0,0,0.9);color:white;padding:15px;border-radius:8px;font-family:sans-serif;width:180px;box-shadow:0 4px 15px rgba(0,0,0,0.7);backdrop-filter:blur(5px);border:1px solid #555;';ui.innerHTML='<div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:10px;border-bottom:1px solid #555;padding-bottom:5px;"><span style="font-weight:bold;font-size:14px;color:#4caf50;">SmartScroll V2</span><button id="gs-close" style="background:none;border:none;color:#aaa;font-size:16px;cursor:pointer;">&times;</button></div><div style="display:flex;gap:5px;margin-bottom:10px;"><button id="gs-up" style="flex:1;background:#444;border:none;color:white;padding:8px;border-radius:4px;cursor:pointer;">&uarr; Up</button><button id="gs-down" style="flex:1;background:#444;border:none;color:white;padding:8px;border-radius:4px;cursor:pointer;">&darr; Down</button></div><button id="gs-stop" style="width:100%;background:#d32f2f;border:none;color:white;padding:8px;border-radius:4px;cursor:pointer;margin-bottom:10px;font-weight:bold;">STOP</button><label style="font-size:12px;display:block;margin-bottom:5px;color:#ccc;">Speed: <span id="gs-val">2</span></label><input type="range" id="gs-speed" min="1" max="50" value="2" style="width:100%;cursor:pointer;">';document.body.appendChild(ui);ui.querySelector('#gs-up').onclick=function(){start(-1);};ui.querySelector('#gs-down').onclick=function(){start(1);};ui.querySelector('#gs-stop').onclick=stop;ui.querySelector('#gs-close').onclick=function(){stop();ui.remove();};var r=ui.querySelector('#gs-speed');var v=ui.querySelector('#gs-val');r.oninput=function(){sp=parseInt(r.value);v.innerText=sp;};})();
